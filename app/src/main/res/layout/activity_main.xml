<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/mid_padding"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/mid_margin"
        android:layout_weight="1"
        android:background="@drawable/layout_background_light_sky_blue"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewWelcomeNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_note"
            android:textSize="@dimen/title_text"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textViewSelectionDialogue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/selection_dialogue"
            android:textSize="@dimen/sub_title_text" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewArea"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:background="@drawable/layout_background_gainsboro" />

</LinearLayout>