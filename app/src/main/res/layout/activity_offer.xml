<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/mid_margin"
    android:background="@drawable/layout_background_gainsboro"
    android:orientation="vertical"
    android:padding="@dimen/mid_padding"
    tools:context=".OfferActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/mid_margin"
        android:layout_weight="4"
        android:background="@drawable/layout_backgroung_alice_blue"
        android:padding="@dimen/mid_padding">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/mid_radius"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/imageViewOfferImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/offer_image"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/mid_margin"
        android:layout_weight="4"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/mid_margin"
            android:layout_weight="1"
            android:background="@drawable/layout_backgroung_alice_blue"
            android:orientation="vertical"
            android:padding="@dimen/mid_padding">

            <TextView
                android:id="@+id/textViewOfferName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/mid_margin"
                android:background="@drawable/text_field_style"
                android:text="@string/offer_name"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/sub_title_text" />

            <TextView
                android:id="@+id/textViewOfferLocation"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/mid_margin"
                android:layout_weight="1"
                android:background="@drawable/text_field_style"
                android:clickable="false"
                android:text="@string/offer_location"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/sub_title_text" />

            <TextView
                android:id="@+id/textViewOfferPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_field_style"
                android:text="@string/offer_price"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/sub_title_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/layout_backgroung_alice_blue"
            android:orientation="vertical"
            android:padding="@dimen/mid_padding">

            <TextView
                android:id="@+id/textViewOfferDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/mid_margin"
                android:background="@drawable/text_field_style"
                android:text="@string/offer_duration"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/sub_title_text" />

            <TextView
                android:id="@+id/textViewOfferItem"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/text_field_style"
                android:text="@string/offer_item"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/sub_title_text" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/layout_backgroung_alice_blue"
        android:orientation="vertical"
        android:padding="@dimen/mid_padding">

        <TextView
            android:id="@+id/textViewOfferDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/text_field_style"
            android:text="@string/offer_description"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/sub_title_text" />

    </LinearLayout>

</LinearLayout>